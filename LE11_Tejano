#include <stdio.h>
#include <string.h>

int main() {

    FILE *fp;
    char name[30], section[50];

    printf("Complete Name: ");
    fgets(name, sizeof(name), stdin);

    printf("Section: ");
    fgets(section, sizeof(section), stdin);

    fp = fopen("student.txt", "w");
    if (fp == NULL) {
        printf("Error opening file folder");
        return 1;
    }

    fprintf(fp, "Name: %s", name);
    fprintf(fp, "Section: %s", section);
    fclose(fp);

    printf("Information successfully save to student.txt\n\n");

    fp = fopen("student.txt", "r");
    if (fp == NULL) {
        printf("Error reading file");
        return 1;
    }

    char ch;
    while ((ch = fgetc(fp)) !=EOF) {
        putchar(ch);
    }

    fclose(fp);
    return 0;

    }
